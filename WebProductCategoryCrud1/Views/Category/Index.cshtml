 @model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

@* <h1>List Of Categories</h1> *@
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primry"> Category </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle"></i>&nbsp; Create New Category </a>

        </div>
    </div>
</div>

<table class=" table table-borderes table-striped" style="width:100%">
    <thead>
        <tr>
            <th> Category Id</th>
            <th> Category Name</th>
            <th> Action </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CategoryId
                </td>
                <td>
                    @item.CategoryName
                </td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="category" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="category" asp-route-id="@item.CategoryId"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>


@model Category
<form method="post">

	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary"> Delete Category </h2>
			<hr />
		</div>

		<div class="row mb-3">
			<label asp-for="CategoryId"></label>
			<input disabled asp-for="CategoryId" class="form-control" />
			<span asp-validation-for="CategoryId" class="text-danger"></span>

		</div>
		<div class="row mb-3">
			<label asp-for="CategoryName"></label>
			<input disabled asp-for="CategoryName" class="form-control" />
			<span asp-validation-for="CategoryName" class="text-danger"></span>

		</div>
		<button class="btn-primary" type="submit"> Delete </button>
	</div>
	<a asp-action="Index" asp-controller="category"> Back To List </a>

</form>

@section scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}




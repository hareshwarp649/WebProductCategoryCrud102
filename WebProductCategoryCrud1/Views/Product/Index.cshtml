 @model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";

    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager!=null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage ;
    }
}

@* <h1>List Of Categories</h1> *@
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primry"> Product </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp; Create New Product </a>

        </div>
    </div>
</div>

<table class=" table table-borderes table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th> Action </th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CategoryId
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.CategoryId
                </td>
                <td>
                    @item.Category.CategoryName
                </td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="product" asp-route-id="@item.ProductId"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="product" asp-route-id="@item.ProductId"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>
<div class="container">
    @if(pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="1">First</a>
                </li>

                <li>
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@(pager.CurrentPage-1)"> Previous </a>
                </li>
            }

            @for (var pge=pager.StartPage;pge<=pager.EndPage;pge++)
            {
                <li class="page-item @(pge==pager.CurrentPage ? "active":"")">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li> 
            }

            @if(pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@(pager.CurrentPage+1)">Next</a>
                </li>

                <li>
                    <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-pg="@(pager.TotalPages)"> Last </a>
                </li>
            }

        </ul>

    }

</div>

